<p id="notice"><%= notice %></p>

<h1>Distypes</h1>

<table>
  <thead>
    <tr>
      <th>Discount name</th>
      <th>Discount amount</th>
      <th>Unit</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @distypes.each do |distype| %>
      <tr>
        <td><%= distype.discount_name %></td>
        <td><%= distype.discount_amount %></td>
        <td><%= distype.unit %></td>
        <td><%= distype.start %></td>
        <td><%= distype.end %></td>
        <td><%= link_to 'Show', distype %></td>
        <td><%= link_to 'Edit', edit_distype_path(distype) %></td>
        <td><%= link_to 'Destroy', distype, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Distype', new_distype_path %>
