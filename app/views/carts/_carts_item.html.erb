<h1>Carts#show</h1>
<p>Find me in app/views/carts/show.html.erb</p>

<% @order_items.each do |item| %>
    <h4><%= item.product.name %></h4>
    <h5><%= item.product.cost %></h5>
    

    <%= form_for item, remote: true do |f| %>
    
        <%= f.hidden_field :product_id, :value =>item.product.id%>
        <%= f.number_field :quantity, :value =>item.quantity.to_i%>
        <%= f.submit "Update Cart"%>
        <%= f.label :Discount %>
         <%# prepopulate here %>
        <%= f.select :discount_id, options_for_select(Discount.all.map{|d|[d.discount_amount, d.id]}) %>
       
        <%= link_to "Remove Items",order_item_path(item),method: :delete, remote: true %>

    <% end %>
    <h5>Subtotal:<%=item.total%></h5>


<% end %>


<h3>Your current cart value has a Subtotal of :<%= current_order.subtotal %></h3>